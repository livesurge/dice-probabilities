<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="die_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/menu_shadow_color</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">22sp</item>
        <!--  
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">45dip</item>
        <item name="android:layout_marginRight">45dip</item>
        <item name="android:paddingLeft">-30dip</item>
        <item name="android:paddingRight">-30dip</item>
        -->
    </style>

    <style name="fraction" parent="die_button">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="probability" parent="die_button">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
</resources>
