<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="die_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/menu_shadow_color</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">@dimen/die_text_size</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="pool" parent="die_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:minWidth">@dimen/pool_button_min_width</item>
    </style>

    <style name="fraction" parent="die_button">
        <item name="android:textSize">@dimen/fraction_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="probability" parent="die_button">
        <item name="android:textSize">@dimen/probability_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="copy" parent="die_button">
        <item name="android:textScaleX">2.5</item>
    </style>

    <style name="clear" parent="die_button">
        <item name="android:textScaleX">2.0</item>
    </style>

    <style name="special" parent="die_button">
        <item name="android:textSize">@dimen/special_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:background">@drawable/slim_spinner</item>
        <item name="android:layout_margin">0dp</item>
        </style>

    <style name="check_result" parent="die_button">
    </style>
    
</resources>