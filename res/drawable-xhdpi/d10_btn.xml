<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >    
	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="@color/black_base"/>
			<stroke
				android:width="1dip"
				android:color="@color/black_stroke" />
			<corners
				android:radius="3dip"/>
			<padding 
			    android:left="5dp"
			    android:right="5dp"
			    android:top="5dp"
			    android:bottom="5dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="@color/black_gradientS"
				android:endColor="@color/black_gradientE"
				android:angle="270"/>
			<stroke
				android:width="1dip"
				android:color="@color/black_stroke"/>
			<corners
				android:radius="3dip"/>
			<padding 
			    android:left="5dp"
			    android:right="5dp"
			    android:top="5dp"
			    android:bottom="5dp"/>
		</shape>
	</item>
</selector>
