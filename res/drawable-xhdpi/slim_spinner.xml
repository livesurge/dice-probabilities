<?xml version="1.0" encoding="utf-8"?>

<!-- The default background of Spinners prevent it from being made smaller -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/special_base" />

            <stroke android:width="1dip" android:color="@color/special_stroke" />

            <corners android:radius="3dip" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/special_gradientE" android:startColor="@color/special_gradientS" />

            <stroke android:width="1dip" android:color="@color/special_stroke" />

            <corners android:radius="3dip" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>

</selector>