<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <view
	    android:id="@+id/graph"
        class="org.kleemann.diceprobabilities.graph.GraphView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    <GridLayout
	    android:id="@+id/top_button_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"

        android:columnCount="4"
        >

	  	<TextView
	  	    android:text="Add" 
	  	    android:layout_row="0"
	  	    android:layout_column="0"
	      	/>
        
	  	<Button 
        	android:id="@+id/pool1_d12"
	  	    android:layout_row="0"
	  	    android:layout_column="1"
     		android:background="@drawable/d12_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool1_d10"
	  	    android:layout_row="0"
	  	    android:layout_column="2"
     		android:background="@drawable/d10_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool1_d8"
	  	    android:layout_row="0"
	  	    android:layout_column="3"
     		android:background="@drawable/d08_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool1_d6"
	  	    android:layout_row="1"
	  	    android:layout_column="1"
     		android:background="@drawable/d06_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool1_d4"
	  	    android:layout_row="1"
	  	    android:layout_column="2"
     		android:background="@drawable/d04_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool1_constant"
	  	    android:layout_row="1"
	  	    android:layout_column="3"
     		android:background="@drawable/constant_btn"
      		style="@style/die_button" />
    	
    	<Button 
        	android:id="@+id/pool1_target"
	  	    android:layout_row="2"
	  	    android:layout_column="0"
     		android:background="@drawable/target_btn"
      		style="@style/die_button" />
        <Button 
            android:id="@+id/current1_target"
	  	    android:layout_row="2"
	  	    android:layout_column="1"
	        android:background="@drawable/target_btn"
		    style="@style/die_button" />

        <TextView
            android:text="Current"
	  	    android:layout_row="3"
	  	    android:layout_column="0"
            />
	  	<TextView 
	      	android:id="@+id/answer1_probability"
	  	    android:layout_row="3"
	  	    android:layout_column="1"
	      	style="@style/probability"
	      	android:background="@drawable/result_btn" />
	  	<TextView 
	    	android:id="@+id/answer1_fraction"
	  	    android:layout_row="3"
	  	    android:layout_column="2"
	      	style="@style/fraction"
	      	android:background="@drawable/result_btn" />
	  	
        
        <LinearLayout
            android:orientation="horizontal"
	  	    android:layout_row="4"
	  	    android:layout_column="0"
	  	    android:layout_columnSpan="4"
            >
            
    	<Button 
            android:id="@+id/current1_d12"
	        android:background="@drawable/d12_btn"
		    style="@style/die_button" />
        <Button 
            android:id="@+id/current1_d10"
	        android:background="@drawable/d10_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current1_d8"
	        android:background="@drawable/d08_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current1_d6"
	        android:background="@drawable/d06_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current1_d4"
	        android:background="@drawable/d04_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current1_constant"
	        android:background="@drawable/constant_btn"
		        style="@style/die_button" />
        
        </LinearLayout>

        <Button 
            android:id="@+id/clear1"
	  	    android:layout_row="5"
	  	    android:layout_column="0"
            android:text="@string/clear"
		    style="@style/die_button" />
    
        
        
        
	                
        <Button 
            android:id="@+id/copy_down"
            android:text="@string/copy_down"
		        style="@style/die_button" />        
        <Button 
            android:id="@+id/copy_up"
            android:text="@string/copy_up"
		        style="@style/die_button" />

    	<Button 
        	android:id="@+id/pool2_d12"
     		android:background="@drawable/d12_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool2_d10"
     		android:background="@drawable/d10_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool2_d8"
     		android:background="@drawable/d08_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool2_d6"
     		android:background="@drawable/d06_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool2_d4"
     		android:background="@drawable/d04_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool2_constant"
     		android:background="@drawable/constant_btn"
      		style="@style/die_button" />
    	<Button 
        	android:id="@+id/pool2_target"
     		android:background="@drawable/target_btn"
      		style="@style/die_button" />

    	<Button 
            android:id="@+id/current2_d12"
	        android:background="@drawable/d12_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current2_d10"
	        android:background="@drawable/d10_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current2_d8"
	        android:background="@drawable/d08_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current2_d6"
	        android:background="@drawable/d06_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current2_d4"
	        android:background="@drawable/d04_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current2_constant"
	        android:background="@drawable/constant_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/current2_target"
	        android:background="@drawable/target_btn"
		        style="@style/die_button" />
        <Button 
            android:id="@+id/clear2"
            android:text="@string/clear"
		        style="@style/die_button" />
    
	  	<TextView 
	    	android:id="@+id/answer2_fraction"
	      	style="@style/fraction"
	      	android:background="@drawable/result_btn" />
	  	<TextView 
	      	android:id="@+id/answer2_probability"
	      	style="@style/probability"
	      	android:background="@drawable/result_btn" />
        
        </GridLayout>
    
</FrameLayout>
